<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-ls-6">
    <%= render 'datepick' %>
  </div>

  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-ls-6">
    <%= form_tag(diaries_path, method: :post) do %>
      <%= submit_tag '保存', class: 'btn btn-primary col-xs-12' %>
      <div class="form-group">
        <% current_form.each do |key, value| %>
          <% if value["文字数"].to_i == DiaryForm::SIZE_OF_AREA %>
            <%= text_area_tag key, @diary.get(key), { class: 'form-control', placeholder: key+"を入力してください", rows: "20" } %>
          <% elsif value["単位"] != "" %>
            <%= text_field_tag key, @diary.get(key), { class: 'form-inline', placeholder: key+"を入力してください", maxlength: 10 } %>
            <span><%= value["単位"] %>&nbsp;&nbsp;</span>
          <% else %>
            <%= text_field_tag key, @diary.get(key), { class: 'form-control', placeholder: key+"を入力してください", maxlength: 50 } %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
