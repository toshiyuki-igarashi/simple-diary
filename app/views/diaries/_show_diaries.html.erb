<div class="row">
  <table class="table">
    <thead>
      <tr>
        <th scope="col" class="col-xs-4 col-sm-2 col-ls-1">日付</th>
        <th scope="col"><%= first_key_of_current_form %></th>
      </tr>
    </thead>
    <tbody>
      <% @diaries.each do |diary| %>
        <tr>
          <% if diary.id %>
            <td class="col-xs-4 col-sm-2 col-ls-1"><small><%= link_to date_to_string(diary[:date_of_diary]), diary_path(id: diary.id) %></small></td>
          <% else %>
            <td class="col-xs-4 col-sm-2 col-ls-1"><small><%= link_to date_to_string(diary[:date_of_diary]), new_diary_path(date_of_diary: diary[:date_of_diary]) %></small></td>
          <% end %>
          <td><%= diary.get(first_key_of_current_form) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>