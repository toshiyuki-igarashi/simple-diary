<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-ls-6">
    <div class="row">
      <div class="col-xs-3 col-sm-3">
        <small>前の<%= get_move_mode_string %></small>
      </div>
      <div class="col-xs-3 col-sm-3">
        <small><%= day_of_week(session[:picked_date]) %></small>
      </div>
      <div class="col-xs-3 col-xs-offset-3 col-sm-3 col-sm-offset-1">
        <small>次の<%= get_move_mode_string %></small>
      </div>
    </div>

    <div class="row" id="date_pick">
      <div class="form-group col-xs-1">
        <%= link_to move_date_path(move_mode: 'prev_'+session[:move_mode]), { class: "btn btn-link", id: "prev_date" } do %>
          <span class="glyphicon glyphicon-triangle-left"></span>
        <% end %>
      </div>

      <div class="form-group col-xs-8 col-sm-6 col-ls-2">
        <input id="date_Get" type="date" value=<%= session[:picked_date] %> />
      </div>

      <div class="form-group col-xs-1">
        <%= link_to move_date_path(move_mode: 'next_'+session[:move_mode]), { class: "btn btn-link", id: "next_date" } do %>
          <span class="glyphicon glyphicon-triangle-right"></span>
        <% end %>
      </div>
    </div>
  </div>
</div>
