<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-1 col-ls-6">
    <div class="row">
      <div class="col-xs-3 col-sm-3">
        <small>前の<%= get_move_mode_string %></small>
      </div>
      <div class="col-xs-4 col-sm-4 col-lg-3 text-center">
        <small><%= kind_of_day(session[:picked_date]) %><%= day_of_week(session[:picked_date]) %></small>
      </div>
      <div class="text-left col-xs-3 col-xs-offset-2 col-sm-3 col-lg-offset-3">
        <small>次の<%= get_move_mode_string %></small>
      </div>
    </div>

    <div class="row" id="date_pick">
      <div class="form-group col-xs-2 col-sm-2">
        <%= link_to move_date_path(move_mode: 'prev_'+session[:move_mode]), { class: "btn btn-link", id: "prev_date" } do %>
          <span class="glyphicon glyphicon-triangle-left"></span>
        <% end %>
      </div>

      <div class="form-group col-xs-7 col-sm-7 col-ls-1">
        <input id="date_Get" type="date" value=<%= session[:picked_date] %> class="pull-center" />
      </div>

      <div class="form-group col-xs-2 col-sm-2">
        <%= link_to move_date_path(move_mode: 'next_'+session[:move_mode]), { class: "btn btn-link", id: "next_date" } do %>
          <span class="glyphicon glyphicon-triangle-right pull-left"></span>
        <% end %>
      </div>
    </div>
  </div>
</div>
