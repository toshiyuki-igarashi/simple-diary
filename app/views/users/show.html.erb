<div class="row">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>ユーザ情報</h4>
    </div>
    <div class="panel-body">
      <p>ユーザ名：<%= @user[:name] %></p>
      <p>email 　：<%= @user[:email] %></p>
    </div>
  </div>
  <div class="row">
    <%= link_to '修正', edit_user_path(@user), class: 'btn btn-primary col-xs-2 col-sm-2 col-ls-1' %>
    <%= link_to '退会', @user, method: :delete, data: { confirm: '本当に退会しますか？' }, class: 'btn btn-danger col-xs-2 col-sm-2 col-ls-1' %>
  </div>

  <div id="diary_info" class="panel panel-default">
    <div class="panel-heading">
      <h4>日記情報</h4>
    </div>
    <div class="panel-body">
      <table class="table">
        <tbody>
          <tr>
            <td class="col-xs-3 col-sm-2 col-ls-1">日記名</td>
            <td><%= current_diary_form[:title] %></td>
            <td></td>
          </tr>

          <% current_form.each do |key, value| %>
            <tr>
              <td class="col-xs-3 col-sm-2 col-ls-1"><%= key %></td>
              <td class="col-xs-3 col-sm-2 col-ls-1"><%= value["文字数"] %></td>
              <% if (value["単位"] == "") %>
                <td></td>
              <% else %>
                <td>単位 <%= value["単位"] %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <%= link_to '修正', edit_diary_form_path(current_diary_form), class: 'btn btn-primary col-xs-2 col-sm-2 col-ls-1' %>
  </div>
</div>
